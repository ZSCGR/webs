
usrColor = #88f
usrHighl = #fff
botColor = #f00
botHighl = #ff0

a
    text-decoration none
    color           usrColor
    &:hover
        color       botColor

#main
    font-family     sans-serif
    color           #fff
    background      black
    position        absolute 
    left            0
    top             0
    right           0
    bottom          0
    padding         0
    margin          0
    overflow        hidden
    user-select         none
    -moz-user-select    none
    -webkit-user-select none
    
svg
    width           100%
    height          100%
    stroke-width    10px
    stroke          white
    fill            none
  
.menul
    position        absolute
    top             0
    left            0

.menur
    position        absolute
    top             0
    right           0
    
.red
    color           botColor
.blue
    color           usrColor
        
.choice
.button
    padding         1em
    display         inline-block
    cursor          pointer
    
.button
    color           #666
    &:hover 
        color       white
    &.highlight
    &.bot
        color       botColor
    &.usr
        color       usrColor
    
.choice
    color           #444
        
.menur .button
    display         block
    
.world
    stroke          #222
    stroke-width    1
    
.line
    stroke          #333
    &.usr
        stroke      usrColor
        &.tmp
            stroke  usrHighl
    &.bot
        stroke      botColor
        &.tmp
            stroke  botHighl
    pointer-events  none
    stroke-linecap  round
    stroke-linejoin bevel
    
.grph
    stroke-width    1
    fill            none
    &.usr
        stroke      usrColor
    &.bot
        stroke      botColor
    
.dot
    pointer-events  all
    stroke-width    0.1
    fill            #000
    stroke          #555    
    &.src 
        fill        #444
        
    &.bot
        stroke      none
        fill        botColor
        &.src    
            fill    botHighl
    &.usr
        stroke      none
        fill        usrColor
        &.linked:hover      
            cursor  pointer
        &.src    
            fill    usrHighl
.pie
    pointer-events  none
    stroke          none
    fill            #000
    
.msg
    text-align      center
    padding         1em
    border-radius   1em
    position        absolute
    top             50%
    left            50%
    transform       translate(-50%, -50%)
    background      rgba(0,0,0,0.8)
    &.bot
        color       botColor
        opacity     1
    &.usr
        color       usrColor
        opacity     1
        
.hint1
.hint2
.popup
.about
    line-height     1.3
    text-align      center
    padding         1em
    border-radius   1em
    position        absolute
    left            50%
    transform       translate(-50%, -50%)
    background      rgba(0,0,0,0.85)
    
.popup
    pointer-events  none
    top             0
    left            0
    
.hint1
    top             30%
.hint2
    top             70%
.about
    line-height     1.5
    text-align      left
    top             50%
    font-size       24px
    cursor          pointer
    & .konnekt
    & .version
        font-size   64px
        margin      48px
        text-align  center
    & .version
        font-size   16px
        color       #333
    
.spark
    stroke          none
    &.usr
        fill        usrColor
    &.bot
        fill        botColor
    
    